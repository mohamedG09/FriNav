<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/list_linearlayout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/list_cardview"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/list_relativelayout"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/person_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                android:layout_gravity="center"
                />



            <TextView
                android:id="@+id/text_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Lan:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_toRightOf="@id/person_image"
                />

            <TextView
                android:id="@+id/text_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Long:"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#fff"
                android:layout_toRightOf="@id/person_image"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Nickname:"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text_long"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#fff"
                android:layout_toRightOf="@id/person_image"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>